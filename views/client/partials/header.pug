header.header
  .container.header-bar
    .left
      a(href="/")
        img(src=(settings.logo || "/img/enaBday.jpg") height="100px" width="100px" class="header-img")
    .middle(class="form-search")
      form(
        form-search
        action="/search/result"
        method="GET"
      )
        div(class="input-group")
          input(type="text" name="keyword" value=keyword)
          button(type="submit" class="btn btn-primary") Tìm
      .inner-suggest
        .inner-list

    .right
      ul.nav-list
        div
          li.nav-item
            a(href="/") Trang chủ
          li.nav-item
            a(href="/topics")  Chủ đề
          li.nav-item
            button(class="btn btn-primary" test-btn) test refresh
        if(!user)
          div
            li.nav-item
              a(href="/users/register")  Đăng kí 
            li.nav-item
              a(href="/users/login")  Đăng nhập 
        else
          div
            li.nav-item
              a(href="/songs/user/favorite") Bài hát yêu thích
            li.nav-item
              a(href="/users/detail") #{user.fullName}
            li.nav-item
              a(href="/users/logout") Đăng xuất
        
