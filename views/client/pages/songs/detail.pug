extends ../../layouts/default
include ../../mixins/boxHead

block main
  .singer-detail
  .container.my-3
    .row
      .col-12
        .inner-title #{song.title}
        div(class="inner-data" data-song=song data-singerInfo=singerInfo)

        .inner-actions
          .inner-action.inner-time
            i.fa-regular.fa-clock
            |  20/10/2023

          .inner-action.inner-singer
            i.fa-solid.fa-microphone-lines 
            |#{song["singerInfo"].fullName}

          .inner-action.inner-topic
            i.fa-solid.fa-music
            |  #{song.topic.title}

          .inner-action.inner-like(class=checkUserLiked ? "yes" : "")
            button(class="btn-wrap btn-like" data-id=song.id)
              i.fa-regular.fa-thumbs-up
            span #{song.likeCount} thích
            small(msg-display)

          .inner-action.inner-heart
            button(class="btn-wrap btn-favorite" data-id=song.id)
              i.fa-regular.fa-heart
            |  Bài hát yêu thích
            small(msg-display)

        .inner-play
          .inner-avatar
            img(src=song.avatar)

          .inner-audio
            div(id="aplayer")

        .inner-desc
          .inner-label Mô tả
          .inner-text
          | #{song.description}


        .inner-desc
          .inner-label Lời bài hát
          .inner-text 
          | !{song.lyrics}


            

        
